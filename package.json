{
  "name": "pedrolamas.com",
  "private": true,
  "description": "Windows Development",
  "version": "0.1.0",
  "author": "Pedro Lamas <pedrolamas@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "gatsby build",
    "develop": "gatsby develop",
    "start": "gatsby develop",
    "serve": "gatsby serve",
    "codegen": "graphql-codegen --config codegen.yml",
    "lint": "yarn run lint:code && yarn run lint:other",
    "lint:code": "yarn run eslint:defaults",
    "lint:other": "yarn run prettier:defaults --check",
    "format": "yarn run format:code && yarn run format:other",
    "format:code": "yarn run eslint:defaults --fix",
    "format:other": "yarn run prettier:defaults --write",
    "eslint:defaults": "eslint --ext .ts,.tsx,.js,.jsx .",
    "prettier:defaults": "prettier \"**/*.{json,md,markdown,css,scss,yaml,yml}\""
  },
  "lint-staged": {
    "*.{json,md,markdown,css,scss,yaml,yml}": [
      "prettier --check"
    ],
    "*.{ts,tsx,js,jsx}": [
      "eslint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@mdx-js/mdx": "^1.3.1",
    "@mdx-js/react": "^1.3.1",
    "@mdx-js/tag": "^0.20.3",
    "disqus-react": "^1.0.6",
    "gatsby": "^2.13.68",
    "gatsby-cli": "^2.7.11",
    "gatsby-image": "^2.2.5",
    "gatsby-plugin-env-variables": "^1.0.1",
    "gatsby-plugin-eslint": "^2.0.5",
    "gatsby-plugin-feed-generator": "^2.0.3",
    "gatsby-plugin-google-analytics": "^2.1.8",
    "gatsby-plugin-manifest": "^2.2.2",
    "gatsby-plugin-mdx": "^1.0.24",
    "gatsby-plugin-netlify": "^2.1.8",
    "gatsby-plugin-offline": "^2.2.6",
    "gatsby-plugin-react-helmet": "^3.1.1",
    "gatsby-plugin-robots-txt": "^1.5.0",
    "gatsby-plugin-sass": "^2.1.8",
    "gatsby-plugin-sharp": "^2.2.12",
    "gatsby-plugin-sitemap": "^2.2.8",
    "gatsby-plugin-twitter": "^2.1.1",
    "gatsby-plugin-typescript": "^2.1.3",
    "gatsby-remark-copy-linked-files": "^2.1.6",
    "gatsby-remark-images": "^3.1.12",
    "gatsby-remark-responsive-iframe": "^2.2.2",
    "gatsby-remark-smartypants": "^2.1.1",
    "gatsby-source-filesystem": "^2.1.13",
    "gatsby-transformer-sharp": "^2.2.2",
    "gatsby-transformer-yaml": "^2.2.1",
    "github-slugger": "^1.2.1",
    "prism-react-renderer": "^0.1.7",
    "prismjs": "^1.16.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-facebook": "^8.0.4",
    "react-helmet": "^5.2.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.6.1",
    "@graphql-codegen/typescript": "^1.6.1",
    "@graphql-codegen/typescript-operations": "^1.6.1",
    "@types/node": "^12.7.2",
    "@types/prismjs": "^1.16.0",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.8.4",
    "@types/react-helmet": "^5.0.8",
    "@types/underscore.string": "^0.0.38",
    "@typescript-eslint/eslint-plugin": "^1.12.0",
    "@typescript-eslint/parser": "^1.12.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-react-app": "^4.0.1",
    "eslint-loader": "^2.2.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react-hooks": "^1.6.1",
    "graphql": "^14.4.2",
    "husky": "^3.0.4",
    "lint-staged": "^9.2.3",
    "node-sass": "^4.12.0",
    "prettier": "^1.18.2",
    "typescript": "^3.5.3"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pedrolamas/pedrolamas.com"
  },
  "bugs": {
    "url": "https://github.com/pedrolamas/pedrolamas.com/issues"
  }
}
